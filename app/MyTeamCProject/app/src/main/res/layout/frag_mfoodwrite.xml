<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날짜"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/m_food_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:hint="아침 식단 작성"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/m_food_pic"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        android:onClick="onClick" />

                    <Button
                        android:id="@+id/m_food_btn"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="3dp"
                        android:onClick="onClick"
                        android:text="사진찍기"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/l_food_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:hint="점심 식단 작성"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/l_food_pic"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        android:onClick="onClick" />

                    <Button
                        android:id="@+id/l_food_btn"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="3dp"
                        android:onClick="onClick"
                        android:text="사진찍기"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|top"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/d_food_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:hint="저녁 식단 작성"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/d_food_pic"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="200dp"
                        android:maxHeight="200dp"
                        android:onClick="onClick" />

                    <Button
                        android:id="@+id/d_food_btn"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|center"
                        android:layout_marginTop="3dp"
                        android:onClick="onClick"
                        android:text="사진찍기"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                     android:orientation="vertical">
                    <EditText
                        android:id="@+id/food_content"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:gravity="center_horizontal"
                        android:hint="내용 작성" />

                    <Button
                        android:id="@+id/insert_btn"
                        android:layout_width="135dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:onClick="onClick"
                        android:text="작성 완료" />

                    <Button
                        android:id="@+id/cancelbtn"
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:onClick="onClick"
                        android:text="취소" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



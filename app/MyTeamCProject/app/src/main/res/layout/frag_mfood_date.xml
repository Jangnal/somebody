<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/todate_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="날짜"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/mornig_img"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/health" />

                <TextView
                    android:id="@+id/mornig_text"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="TextView" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/lunch_img"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/health" />

                <TextView
                    android:id="@+id/lunch_text"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="TextView" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dinner_img"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/health" />

                <TextView
                    android:id="@+id/dinner_text"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="TextView" />

            </LinearLayout>

            <Button
                android:id="@+id/changbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="수정"/>

            <Button
                android:id="@+id/backbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="뒤로가기"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>